<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include("components/head.ejs") %>
  <title>Cadastro</title>
</head>

<body id="cadastro">
  <% if(locals.user && user) {%>
    <%- include("components/header_logado.ejs") %>
  <% } else { %>
    <%- include("components/header.ejs") %>
  <% } %>

  <main class="registration-page main">
    <div class="title-bg">
      <div class="title container">
        <p class="font-2-l-b color-5 fadeInLeft" data-anime="200">Cadastre seus dados</p>
        <h1 class="font-1-xxl color-0 fadeInLeft" data-anime="400">Página de Cadastro<span class="color-p1">.</span></h1>
      </div>
    </div>

    <% if (typeof userError !="undefined" ){ %>

      <%- include("modals/erros/userError.ejs"); %>

      <% } else if(typeof confirmed_PasswordError != "undefined") {%>
      <%- include("modals/erros/confirmed_PasswordError.ejs"); %>

      <% }  %>

    <form class="container form-main" action="/cadastro" method="POST">
      <fieldset class="personal-data fadeInLeft" data-anime="600">
        <legend>Dados pessoais</legend>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-47",type:"email",id_name:"email",label:"E-mail*", value:"" }) %>
          <%-include('./components/input_group.ejs', {style:"w-47",type:"text",id_name:"cpf",label:"CPF*", value:""}) %>
        </div>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-100",type:"text",id_name:"nome",label:"Nome completo*", value:"" }) %>

        </div>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-47",type:"text",id_name:"telefone",label:"Telefone", value:""}) %>
          <%-include('./components/input_group.ejs', {style:"w-47",type:"date",id_name:"dtNascimento",label:"Data de nascimento*", value:"" }) %>
        </div>
        <div class="row">

          <%-include('./components/input_group.ejs', {style:"w-47",type:"password",id_name:"senha",label:"Senha*", value:""}) %>
          <%-include('./components/input_group.ejs', {style:"w-47",type:"password",id_name:"senhaConfirmada",label:"Confirme a senha*", value:"" }) %>

        </div>
      </fieldset>
      <fieldset class="address-data fadeInRight" data-anime="800">
        <legend>Endereço</legend>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-100",type:"text",id_name:"cep",label:"CEP*", value:"" }) %>
        </div>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-80",type:"text",id_name:"rua",label:"Rua*", value:"" }) %>
          <%-include('./components/input_group.ejs', {style:"w-15",type:"text",id_name:"numero",label:"Número*", value:"" }) %>
        </div>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-47",type:"text",id_name:"bairro",label:"Bairro*", value:"" }) %>
          <%-include('./components/input_group.ejs', {style:"w-47",type:"text",id_name:"cidade",label:"Cidade*", value:"" }) %>
        </div>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-100",type:"text",id_name:"complemento",label:"Complemento", value:"" }) %>
        </div>        
        <div class="row cadastro-check">
          <%-include('./components/checkbox_group.ejs', {style:"w-100 fadeInUp",value:"true",id_name:"novidades",label:"Quero receber novidades", value:"" }) %>
        </div>
        <div class="row">
          <%-include('./components/input_group.ejs', {style:"w-100 fadeInUp",type:"submit",label:"Cadastrar"}) %>
        </div>        


      </fieldset>
    </form>
  </main>
  <%- include("components/footer.ejs") %>
  <script src="./scripts/plugins/simple-anime.js"></script>
  <script src="./scripts/script.js"></script>
  <script src="./scripts/modalErrors.js"></script>
</body>

</html>