<div class="card">

  <% if (pagamentos) {%>
    <div class="card-container">
      <div class="front">
        <div class="image">
          <img src="/images/icones/chip.png" alt="">
          <img src="/images/icones/visa.png" alt="">
        </div>
        <div class="font-1-m-b color-11 card-number-box"><%= pagamentos.numero %></div>
        <div class="flexbox">
          <div class="box">
            <div class="expiration">
              <div>
                <span class="font-1-m-b color-11">validade</span>
              </div>

              <% const data = new Date(pagamentos.validade);
                const mes = data.getUTCMonth() + 1;
                const ano = data.getUTCFullYear();
              %>

              <span class="font-1-m color-11 exp-month"><%= mes %></span>
              <span>/</span>
              <span class="font-1-m color-11 exp-year"><%= ano %></span>
            </div>

            <div class="font-1-m-b color-11 card-holder-name"><%= pagamentos.nome %></div>
          </div>
          <div>
            <img src="/images/icones/maestro.svg" alt="">
          </div>
        </div>
      </div>

      <div class="back">
        <div class="stripe"></div>
        <div class="box">
          <span class="font-1-m-b color-11">cvv</span>
          <div class="font-1-m-b color-11 cvv-box"><%= pagamentos.cvv %></div>
          <div class="flexbox">
            <div class="back-visaImage">
              <div>
                <img src="/images/icones/visa.png" alt="">
              </div>
              <div>
                <img src="/images/icones/maestro_black.svg" alt="" >
              </div>
            </div>        
          </div>
        </div>
      </div>
    </div>

    <form class="userpage_form credit_card-form" action="/pagamentos?_method=PUT" method="POST">
        <div class="col-2 inputBox">
          <label for="numero">Número do cartão</label>
          <input type="text"  id="numero" name="numero" maxlength="16" class="card-number-input" placeholder="<%= pagamentos.numero %>" required>
        </div>
        <div class="col-2 inputBox">
          <label for="titular">Titular do cartão</label>
          <input type="text" id="titular" name="titular" class="card-holder-input" placeholder="<%= pagamentos.nome %>" required>
        </div>
          <div class="inputBox">
            <label for="validade">Mês</label>
            <input type="text" id="validade" name="validade" class="month-input" placeholder="<%= mes + " DE " + ano %>" onfocus="(this.type='month')" onblur="(this.type='text')" required>
          </div>
          <div class="inputBox">
            <label for="cvv">CVV</label>
            <input type="text" id="cvv" name="cvv" maxlength="4" class="cvv-input" placeholder="<%= pagamentos.cvv %>" required>
          </div>
            <input type="submit" value="Atualizar Pagamento" class="update_userpage_button col-2">
    </form>

  <% } else {%>

    <div class="card-container">
      <div class="front">
        <div class="image">
          <img src="/images/icones/chip.png" alt="">
          <img src="/images/icones/visa.png" alt="">
        </div>
        <div class="font-1-m-b color-11 card-number-box"></div>
        <div class="flexbox">
          <div class="box">
            <div class="expiration">
              <div>
                <span class="font-1-m-b color-11">validade</span>
              </div>

              <span class="font-1-m color-11 exp-month"></span>
              <span>/</span>
              <span class="font-1-m color-11 exp-year"></span>
            </div>

            <div class="font-1-m-b color-11 card-holder-name"></div>
          </div>
          <div>
            <img src="/images/icones/maestro.svg" alt="">
          </div>
        </div>
      </div>

      <div class="back">
        <div class="stripe"></div>
        <div class="box">
          <span class="font-1-m-b color-11">cvv</span>
          <div class="font-1-m-b color-11 cvv-box"></div>
          <div class="flexbox">
            <div class="back-visaImage">
              <div>
                <img src="/images/icones/visa.png" alt="">
              </div>
              <div>
                <img src="/images/icones/maestro_black.svg" alt="" >
              </div>
            </div>        
          </div>
        </div>
      </div>
    </div>

    <form class="userpage_form credit_card-form" action="/pagamentos" method="POST">
        <div class="col-2 inputBox">
          <label for="numero">Número do cartão</label>
          <input type="text"  id="numero" name="numero" maxlength="16" class="card-number-input" required>
        </div>
        <div class="col-2 inputBox">
          <label for="titular">Titular do cartão</label>
          <input type="text" id="titular" name="titular" class="card-holder-input" required>
        </div>
          <div class="inputBox">
            <label for="validade">Mês</label>
            <input type="text" id="validade" name="validade" class="month-input" onfocus="(this.type='month')" onblur="(this.type='text')" required>
          </div>
          <div class="inputBox">
            <label for="cvv">CVV</label>
            <input type="text" id="cvv" name="cvv" maxlength="4" class="cvv-input" required>
          </div>
            <input type="submit" value="Cadastrar Pagamento" class="update_userpage_button col-2">
    </form>
    <% } %>
</div>